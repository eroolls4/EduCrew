@model IEnumerable<EduCrew.Models.PostDTO>

@{
    ViewBag.Title = "Admin Panel - Post Management";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Or your custom layout
}

<h2>Admin Panel - Post Management</h2>

<table id="postsTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>User ID</th>
            <th>User Name</th>
            <th>Category</th>
            <th>Created Date</th>
            <th>actions</th>
             
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.PostId</td>
                <td>@post.Title</td>
                <td>@post.UserId</td>
                <td>@post.UserName</td>
                <td>@post.Category</td>
                <td>@post.CreatedDate.ToString("yyyy-MM-dd")</td>
                <td>@Html.ActionLink("check details", "Details", "Posts", new { id = post.PostId }, new { @class = "nav-link" })</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#postsTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
